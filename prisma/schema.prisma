// This is your Prisma schema file for the wallet system
// Run `npx prisma init` to set up Prisma if not already done
// Then run `npx prisma migrate dev` to create the database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql", "sqlite" based on your preference
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  email     String?  @unique
  role      String   @default("user") // "admin" | "user"
  balance   Decimal  @default(0) @db.Decimal(12, 2) // Wallet balance in VND
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  type      String   // "DEPOSIT" | "PURCHASE"
  amount    Decimal  @db.Decimal(12, 2)
  status    String   @default("pending") // "pending" | "completed" | "failed"
  orderId   String?  // For PURCHASE transactions, link to order
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([orderId])
  @@index([createdAt])
}
